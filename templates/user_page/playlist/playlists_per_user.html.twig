{% extends 'base.html.twig' %}

  {% block title %}Playlist{% endblock %}

{% block body %}

{% include "user_page/profil/_header.html.twig" %}

<div class="playlist">

  <div class="playlist-title">
      
    <h1>Playlists</h1>  

      {% if is_granted('ROLE_USER') and app.user.id == user.id %} 

        <a href="{{ path('new_playlist', {'userId': user.id})}}">Nouvelle playlist</a>

      {% endif %}

  </div>

    <div class="playlist-cards">

      {% for playlist in playlists %}

          <div class="playlist-card">

              <div class="card-titre">

                <a href="{{ path('show_playlist', {'userId': user.id, 'playlistId': playlist.id})}}"><h2>{{ playlist.nomPlaylist }}</h2></a>

                {# {% if is_granted('ROLE_USER') and app.user.id == user.id %}  #}
