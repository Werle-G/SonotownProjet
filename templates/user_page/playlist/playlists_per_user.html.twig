                {# {% endif %} #}

              </div>

              <div class="playlist-titre">
                
                {% for ajouter in playlist.ajouter %} 
                
                  <p>{{ ajouter.titre }}</p>
                
                {% endfor %}

              </div>  
        </div>
      {% endfor %}
    </div>

</div>

